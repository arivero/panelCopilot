{
    "manifest_version": 3,
    "name": "Browsing Companion",
    "version": "1.0",
    "permissions": [
      "tabs", "scripting", "storage", "activeTab", "sidePanel", 
      "unlimitedStorage"
    ],
    "host_permissions": [ "http://localhost:11434/*" ],
    "web_accessible_resources": [],
    "options_page": "options.html",
    "action": {
      "default_title": "Read Page Title"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }
  